<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bit.apps.kanadra.View.Activity.ProjectDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/project_title"
                android:text="sadknmasfas"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:padding="5dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="fill_parent"
                    android:layout_height="185dp"
                    android:layout_alignParentTop="true" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:padding="10dip"
                    app:centered="true"
                    app:fillColor="@color/main"
                    app:pageColor="#fff"
                    app:snap="false" />


            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/project_content"
                android:text="sadknmasfas"
                android:textSize="18dp"
                android:gravity="right"
                android:textColor="#000"
                android:layout_margin="7dp"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_margin="5dp"></com.google.android.gms.maps.MapView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/offwit"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/offwit"
            android:padding="5dp"
            android:onClick="makeCall"
            android:src="@drawable/phone" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text" />

        <ImageView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/offwit"
            android:padding="5dp"
            android:src="@drawable/website"
            android:onClick="openWebsite"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/offwit"
            android:padding="5dp"
            android:src="@drawable/facebook"
            android:onClick="openFacebook"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/offwit"
            android:padding="5dp"
            android:src="@drawable/twitter"
            android:onClick="openTwitter"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text" />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/offwit"
            android:padding="5dp"
            android:src="@drawable/instagram"
            android:onClick="openInstagram"/>

    </LinearLayout>


</FrameLayout>
